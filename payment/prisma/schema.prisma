generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Balances {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId Int @unique
  amount Int
  locked Int
}

model OnRampTransactions {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  status    OnRampStatus
  token     String       @unique
  provider  String
  amount    Int
  startTime DateTime
  userId    Int
}

enum OnRampStatus {
  Success
  Failure
  Processing
}
